# https://contest.yandex.ru/contest/22450/run-report/69494361/
from typing import List


def closest_zero(n: int, hs: List[int]) -> None:
    zer = []
    [zer.append(i) for i in range(n) if not hs[i]]
    # for i in range(n):
        # if hs[i] == 0:
            # zer.append(i)
    if len(zer) == 1:
        for i in range(n):
            hs[i] = abs(zer[0] - i)
        print(*hs)
        return
    for i in range(zer[0]):
        hs[i] = zer[0] - i
    for i in range(zer[-1], n):
        hs[i] = i - zer[-1]
    for i in range(len(zer) - 1):
        l, r = zer[i] + 1, zer[i + 1] - 1
        cur_dist = 1
        while l <= r:
            hs[l] = hs[r] = cur_dist
            l += 1
            r -= 1
            cur_dist += 1
        print(*hs)


def main() -> int:
    closest_zero(int(input()), list(map(int, input().split())))
    return 0


if __name__ == '__main__':
    main()
